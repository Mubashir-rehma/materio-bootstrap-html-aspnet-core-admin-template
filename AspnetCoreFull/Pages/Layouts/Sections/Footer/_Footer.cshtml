@{
  TempData.Keep();
  ViewData["containerNav"] ??= "container-fluid";
}

<footer class="content-footer footer bg-footer-theme">
  <div class='@ViewData["containerNav"] d-flex flex-wrap justify-content-between py-2 flex-md-row flex-column'>
    <div class="mb-2 mb-md-0">
      ©
      <script>
        document.write(new Date().getFullYear())
      </script>
      , made with ❤️ by <a href='@TempData["creatorUrl"]' target="_blank" class="footer-link fw-bolder">@TempData["creatorName"]</a>
    </div>
    <div>
      <a href='@TempData["licenseUrl"]' class="footer-link me-4" target="_blank">License</a>
      <a href='@TempData["moreThemes"]' target="_blank" class="footer-link me-4">More Themes</a>
      <a href='@TempData["documentation"]' target="_blank" class="footer-link me-4">Documentation</a>
      <a href='@TempData["support"]' target="_blank" class="footer-link d-none d-sm-inline-block">Support</a>
    </div>
  </div>
</footer>
