@page
@model AspnetCoreFull.Pages.Pages.AccountSettings.ConnectionsModel
@{
  ViewData["Title"] = "Account settings - Connections";
}

@* ************** Content ************** *@
<h4 class="fw-bold py-3 mb-4">
  <span class="text-muted fw-light">Account Settings / </span> Connections
</h4>

<div class="row">
  <div class="col-md-12">
    <ul class="nav nav-pills flex-column flex-md-row mb-3">
      <li class="nav-item"><a class="nav-link" href="pages-account-settings-account.html"><i class="bx bx-user me-1"></i> Account</a></li>
      <li class="nav-item"><a class="nav-link" href="pages-account-settings-security.html"><i class="bx bx-lock-alt me-1"></i> Security</a></li>
      <li class="nav-item"><a class="nav-link" href="pages-account-settings-billing.html"><i class="bx bx-detail me-1"></i> Billing & Plans</a></li>
      <li class="nav-item"><a class="nav-link" href="pages-account-settings-notifications.html"><i class="bx bx-bell me-1"></i> Notifications</a></li>
      <li class="nav-item"><a class="nav-link active" href="javascript:void(0);"><i class="bx bx-link-alt me-1"></i> Connections</a></li>
    </ul>
    <div class="row">
      <div class="col-md-6 col-12 mb-md-0 mb-4">
        <div class="card">
          <h5 class="card-header">Connected Accounts</h5>
          <div class="card-body">
            <p>Display content from your connected accounts on your site</p>
            <!-- Connections -->
            <div class="d-flex mb-3">
              <div class="flex-shrink-0">
                <img src="~/img/icons/brands/google.png" alt="google" class="me-2" height="30">
              </div>
              <div class="flex-grow-1 row">
                <div class="col-sm-9">
                  <h6 class="mb-0">Google</h6>
                  <small class="text-muted">Calendar and contacts</small>
                </div>
                <div class="col-sm-3 text-sm-end mt-sm-0 mt-2">
                  <label class="switch">
                    <input type="checkbox" class="switch-input" checked />
                    <span class="switch-toggle-slider">
                      <span class="switch-on"></span>
                      <span class="switch-off"></span>
                    </span>
                    <span class="switch-label"></span>
                  </label>
                </div>
              </div>
            </div>
            <div class="d-flex mb-3">
              <div class="flex-shrink-0">
                <img src="~/img/icons/brands/slack.png" alt="slack" class="me-2" height="30">
              </div>
              <div class="flex-grow-1 row">
                <div class="col-sm-9">
                  <h6 class="mb-0">Slack</h6>
                  <small class="text-muted">Communication</small>
                </div>
                <div class="col-sm-3 text-sm-end mt-sm-0 mt-2">
                  <label class="switch">
                    <input type="checkbox" class="switch-input" />
                    <span class="switch-toggle-slider">
                      <span class="switch-on"></span>
                      <span class="switch-off"></span>
                    </span>
                    <span class="switch-label"></span>
                  </label>
                </div>
              </div>
            </div>
            <div class="d-flex mb-3">
              <div class="flex-shrink-0">
                <img src="~/img/icons/brands/github.png" alt="github" class="me-2" height="30">
              </div>
              <div class="flex-grow-1 row">
                <div class="col-sm-9">
                  <h6 class="mb-0">Github</h6>
                  <small class="text-muted">Manage your Git repositories</small>
                </div>
                <div class="col-sm-3 text-sm-end mt-sm-0 mt-2">
                  <label class="switch">
                    <input type="checkbox" class="switch-input" checked />
                    <span class="switch-toggle-slider">
                      <span class="switch-on"></span>
                      <span class="switch-off"></span>
                    </span>
                    <span class="switch-label"></span>
                  </label>
                </div>
              </div>
            </div>
            <div class="d-flex mb-3">
              <div class="flex-shrink-0">
                <img src="~/img/icons/brands/mailchimp.png" alt="mailchimp" class="me-2" height="30">
              </div>
              <div class="flex-grow-1 row">
                <div class="col-sm-9">
                  <h6 class="mb-0">Mailchimp</h6>
                  <small class="text-muted">Email marketing service</small>
                </div>
                <div class="col-sm-3 text-sm-end mt-sm-0 mt-2">
                  <label class="switch">
                    <input type="checkbox" class="switch-input" checked />
                    <span class="switch-toggle-slider">
                      <span class="switch-on"></span>
                      <span class="switch-off"></span>
                    </span>
                    <span class="switch-label"></span>
                  </label>
                </div>
              </div>
            </div>
            <div class="d-flex">
              <div class="flex-shrink-0">
                <img src="~/img/icons/brands/asana.png" alt="asana" class="me-2" height="30">
              </div>
              <div class="flex-grow-1 row">
                <div class="col-sm-9">
                  <h6 class="mb-0">Asana</h6>
                  <small class="text-muted">Communication</small>
                </div>
                <div class="col-sm-3 text-sm-end mt-sm-0 mt-2">
                  <label class="switch">
                    <input type="checkbox" class="switch-input" />
                    <span class="switch-toggle-slider">
                      <span class="switch-on"></span>
                      <span class="switch-off"></span>
                    </span>
                    <span class="switch-label"></span>
                  </label>
                </div>
              </div>
            </div>
            <!-- /Connections -->
          </div>
        </div>
      </div>
      <div class="col-md-6 col-12">
        <div class="card">
          <h5 class="card-header">Social Accounts</h5>
          <div class="card-body">
            <p>Display content from social accounts on your site</p>
            <!-- Social Accounts -->
            <div class="d-flex mb-3">
              <div class="flex-shrink-0">
                <img src="~/img/icons/brands/facebook.png" alt="facebook" class="me-2" height="30">
              </div>
              <div class="flex-grow-1 row">
                <div class="col-sm-7">
                  <h6 class="mb-0">Facebook</h6>
                  <small class="text-muted">Not Connected</small>
                </div>
                <div class="col-sm-5 text-sm-end mt-sm-0 mt-2">
                  <button class="btn btn-label-secondary">Connect</button>
                </div>
              </div>
            </div>
            <div class="d-flex mb-3">
              <div class="flex-shrink-0">
                <img src="~/img/icons/brands/twitter.png" alt="twitter" class="me-2" height="30">
              </div>
              <div class="flex-grow-1 row">
                <div class="col-sm-7">
                  <h6 class="mb-0">Twitter</h6>
                  <a href="{{twitterUrl}}" target="_blank">@TempData.Peek("authorName")</a>
                </div>
                <div class="col-sm-5 text-sm-end mt-sm-0 mt-2">
                  <button class="btn btn-label-danger">Disconnect</button>
                </div>
              </div>
            </div>
            <div class="d-flex mb-3">
              <div class="flex-shrink-0">
                <img src="~/img/icons/brands/instagram.png" alt="instagram" class="me-2" height="30">
              </div>
              <div class="flex-grow-1 row">
                <div class="col-sm-7">
                  <h6 class="mb-0">instagram</h6>
                  <a href="{{instagramUrl}}" target="_blank">@TempData.Peek("authorName")</a>
                </div>
                <div class="col-sm-5 text-sm-end mt-sm-0 mt-2">
                  <button class="btn btn-label-danger">Disconnect</button>
                </div>
              </div>
            </div>
            <div class="d-flex mb-3">
              <div class="flex-shrink-0">
                <img src="~/img/icons/brands/dribbble.png" alt="dribbble" class="me-2" height="30">
              </div>
              <div class="flex-grow-1 row">
